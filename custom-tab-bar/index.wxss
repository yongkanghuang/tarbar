.tab-bar {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      /* height: 200rpx; *//* background: white; */
      display: flex;
      padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
      background-color: #fff;
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 120rpx;
      z-index: 1;
      box-shadow: 0 -2rpx 20rpx 0 rgba(74, 156, 249, 0.08);
      /* transform: scaleY(0.5); */
}

.tab-bar-item {
      height: 100rpx;
      flex: 1;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      align-self: flex-end;
      /* background-color: rgba(0,0,0, 0.2); */
      z-index: 999;
}

.tab-bar-item-scan {
      height: 150rpx;
      width: 150rpx;
      flex: 1;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      align-self: flex-end;
      background-color: #fff;
      border-radius: 50%;
      /* box-shadow: 0 -20rpx 20rpx 0 #4A9CF9; */
      z-index: 999;
}

.tab-bar-item cover-image {
      width: 68rpx;
      height: 68rpx;
}

.tab-bar-item cover-view {
      font-size: 10px;
      line-height: 1.8;
}
.tab-bar .img-box {
      border: 4rpx solid #f0f0f0;
      border-radius: 50%;
}
.tab-bar .img-scan {
      width: 130rpx;
      height: 130rpx;
      border-radius: 50%;
}
