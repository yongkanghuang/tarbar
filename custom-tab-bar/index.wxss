.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
     height: 135rpx;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  align-self: flex-end;
}
.tab-bar-item-scan {
     height: 196rpx;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  align-self: flex-end;
}

.tab-bar-item cover-image {
  width: 88rpx;
  height: 88rpx;
}

.tab-bar-item cover-view {
  font-size: 10px;
  line-height: 1.8;
}
.tab-bar .img-scan {
     width: 150rpx;
     height: 150rpx;
}
